{
  "files.associations": {
    //#region: Ansible
    "**/*.yaml": "ansible",
    "roles/docker/tasks/compose.yaml": "ansible",
    //#endregion: Ansible

    //#region: YAML
    ".ansible-lint": "yaml",
    ".github/workflows/*.yaml": "yaml",
    ".pre-commit-config.yaml": "yaml",
    ".yamllint": "yaml",
    "inventory.yaml": "yaml",
    "requirements.yaml": "yaml",
    "**/files/**/*.yaml": "yaml",
    //#endregion: YAML

    //#region: Docker
    "**/files/docker-compose/**/docker-compose.yaml": "dockercompose",
    //#endregion: Docker

    //#region: Bash
    "**/files/dotfiles/linux/**": "shellscript",
    "**/files/dotfiles/mac/**": "shellscript",
    "**/*.sh.j2": "shellscript",
    "**/roles/zsh/templates/**/*.j2": "shellscript",
    //#endregion: Bash

    //#region: JSON
    "**/radio-favourites": "json",
    //#endregion: JSON

    //#region: SystemD
    "**/*.timer.j2": "systemd-conf",
    "**/*.service.j2": "systemd-conf",
    //#endregion: SystemD

    //#region: TOML
    "**/telegraf/files/**/*.conf": "toml",
    "**/telegraf/templates/*.conf.j2": "toml",
    //#endregion: TOML
  }
}
