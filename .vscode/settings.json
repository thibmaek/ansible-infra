{
  "files.associations": {
    // Ansible
    "**/*.yaml": "ansible",
    "roles/docker/tasks/compose.yaml": "ansible",

    // YAML
    ".ansible-lint": "yaml",
    ".github/workflows/*.yaml": "yaml",
    ".pre-commit-config.yaml": "yaml",
    ".yamllint": "yaml",
    "inventory.yaml": "yaml",
    "requirements.yaml": "yaml",

    // Bash
    "**/files/dotfiles/linux/**": "shellscript",
    "**/files/dotfiles/mac/**": "shellscript",
    "**/*.sh.j2": "shellscript",

    // JSON
    "**/radio-favourites": "json",

    // SystemD
    "**/*.timer.j2": "systemd-conf",
    "**/*.service.j2": "systemd-conf",

    // Toml
    "**/telegraf/files/**/*.conf": "toml",
    "**/telegraf/templates/*.conf.j2": "toml",
  }
}
